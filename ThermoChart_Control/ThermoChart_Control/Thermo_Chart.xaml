<UserControl x:Class="ThermoChart_Control.ThermoChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:ThermoChart_Control"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="#848484">
            <DockPanel>
                <local:ThermoChartLegend DockPanel.Dock="Right" x:Name="Legend" />
                <local:ThermoChartArea DockPanel.Dock="Left" x:Name="ChartArea" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>